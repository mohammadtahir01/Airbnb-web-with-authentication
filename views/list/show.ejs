<% layout("/layout/boilerPlate") %>
<div class="row">
  <div class="col-8 offset-2">
    <b><%= listingId.title %></b>
  </div>
  <div class="card col-6 offset-2 listing-card">
    <img
      src="<%= listingId.image %>"
      class="card-img-top"
      alt="listing-Image"
    />
    <div class="card-body">
      <p class="card-text">
        <%= listingId.description %> <br />
        &#8377;<%=listingId.price.toLocaleString("en-IN") %> <br />
        <%= listingId.location %> <br />
        <%= listingId.country %>
      </p>
    </div>
  </div>
</div>
<div class="btns">
  <a
    href="/listings/<%= listingId._id %>/edit"
    class="btn btn-dark col-1 offset-2 edit-btn"
    >Edit</a
  >
  <form action="/listings/<%= listingId._id %>?_method=DELETE" method="POST">
    <button class="btn btn-dark offset-4">Delete</button>
  </form>
</div>
<!-- </div> -->
<div class="col-8 offset-2 mb-3">
  <h4>Leave a Rating</h4>
  <form
    action="/listings/<%= listingId._id %>/review"
    method="POST"
    novalidate
    class="needs-validation"
  >
    <div class="mb-3 bt-3">
      <label for="rating"></label>
      <input
        type="range"
        min="1"
        max="5"
        name="review[rating]"
        id="rating"
        required
      />
    </div>
    <div class="mb-3 bt-3">
      <label for="comment" class="form-label">Comment</label>
      <textarea
        name="review[comment]"
        class="form-control"
        id="comment"
        placeholder="Give me Feedback"
        required
      ></textarea>
      <div class="invalid-feedback">Please Add Some Comments Here</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>

  <hr>
    <b><p>all reviews</p></b>
    <div class="row">
   <% for(let review of listingId.reviews){ %>
   <div class="card col-5 ms-3 mb-2">
      <div class="card-body">
    <h5 class="card-title">Tahir</h5>
     <p class="card-text"><%= review.comment %></p>
     <p class="card-text"><%= review.rating %> Satrs</p>
  </div>
  <form action="/listings/<%= listingId._id %>/review/<%= review._id %>?_method=DELETE" method="POST" class="mb-3">
      <button class="btn btn-sm btn-dark">Delete</button>
     </form>
   </div>
   <% } %>
  </div>
</div>
